{
  "name": "javascript-nodejs-starter",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "dev": "npm run watch-css | nodemon app.js",
    "prebuild:css": "node-sass ./assets/stylesheets/styles.scss ./public/stylesheets/styles.css",
    "prefix:css": "postcss ./public/stylesheets/styles.css --use autoprefixer --output ./public/stylesheets/styles.css",
    "build:css": "npm run prebuild:css; npm run prefix:css",
    "watch-css": "watch 'npm run build:css' ./assets/stylesheets",
    "lint": "eslint app.js config.js prismic-configuration.js",
    "test": "npm run lint"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "debug": "~3.1.0",
    "errorhandler": "~1.5.0",
    "express": "~4.16.1",
    "method-override": "~2.3.10",
    "morgan": "~1.9.0",
    "node-sass": "^4.11.0",
    "postcss": "^7.0.14",
    "prismic-dom": "^2.0.4",
    "prismic-javascript": "^1.4.0",
    "pug": "^2.0.0-alpha6",
    "serve-favicon": "~2.4.5",
    "watch": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/prismicio/javascript-nodejs-starter.git"
  },
  "devDependencies": {
    "eslint": "^4.8.0"
  }
}
